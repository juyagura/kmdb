<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @movie.title %></h3>
      </div>
      <div class="panel-body">
        <div class="col-sm-2">
            <img src="<%= @movie.image_url %>" class="img-responsive">
        </div>
        <div class="col-sm-10">
          <dl>
            <dt>Year</dt>
            <dd><%= @movie.year %></dd>

            <dt>Director</dt>
            <dd><%= @list_of_directors.find(@movie.director_id).name %></dd>

            <dt>Description</dt>
            <dd><%= @movie.description %></dd>

            <dt>Actions</dt>
            <dd>
              <a href="/movies" class="btn btn-primary">Back to Movies List</a>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

